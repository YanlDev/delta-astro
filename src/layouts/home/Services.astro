---
import ServiceCard from "../components/ServiceCard.astro";

// Importar imágenes para cada servicio
import pregradoImage from "../../assets/img/services/pregrado.png";
import posgradoImage from "../../assets/img/services/posgrado.png";
import practicasImage from "../../assets/img/services/practicas.png";

// Definir servicios destacados para la página de inicio
const highlightedServices = [
  {
    title: "Tesis de Pregrado",
    description: "Desarrollamos tesis de licenciatura con metodología rigurosa y adaptada a los requisitos específicos de tu universidad.",
    features: [
      "Marco teórico actualizado",
      "Metodología personalizada",
      "Asesoría en la defensa"
    ],
    imageSrc: pregradoImage.src,
    colorClass: "from-blue-600 to-indigo-600",
    href: "/servicios/pregrado"
  },
  {
    title: "Tesis de Posgrado",
    description: "Investigación avanzada para maestrías y doctorados con profundidad académica y aportes significativos a tu campo.",
    features: [
      "Investigación exhaustiva",
      "Análisis estadístico avanzado",
      "Publicaciones científicas"
    ],
    imageSrc: posgradoImage.src,
    colorClass: "from-indigo-600 to-purple-600",
    href: "/servicios/posgrado"
  },
  {
    title: "Informes de Prácticas",
    description: "Elaboramos informes profesionales que destacan tus competencias y logros durante tu experiencia práctica.",
    features: [
      "Estructura profesional",
      "Documentación de actividades",
      "Entregas rápidas"
    ],
    imageSrc: practicasImage.src,
    colorClass: "from-blue-500 to-teal-500",
    href: "/servicios/informes"
  }
];
---

<section id="servicios" class="py-20 bg-slate-900 relative overflow-hidden">
  {/* Elementos decorativos de fondo */}
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute -top-24 -right-24 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply blur-2xl"
    >
    </div>
    <div
      class="absolute bottom-0 -left-24 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply blur-2xl"
    >
    </div>
    <div
      class="absolute top-1/2 right-10 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply blur-2xl"
    >
    </div>
  </div>

  {/* Grid de fondo */}
  <div class="absolute inset-0 opacity-5">
    <div class="h-full w-full grid grid-cols-12 gap-1">
      {
        Array(12)
          .fill(0)
          .map((_, i) => <div class="h-full border-r border-gray-300" />)
      }
    </div>
    <div class="h-full w-full grid grid-rows-6 gap-1">
      {
        Array(6)
          .fill(0)
          .map((_, i) => <div class="w-full border-b border-gray-300" />)
      }
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    {/* Encabezado de la sección */}
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Nuestros Servicios Destacados
      </h2>
      <p class="text-gray-300 max-w-3xl mx-auto">
        Ofrecemos asesoría especializada para todos tus proyectos académicos,
        con la garantía de calidad y originalidad que tu carrera merece.
      </p>
      <div class="w-24 h-1 bg-blue-600 mx-auto mt-6"></div>
    </div>

    {/* Tarjetas de servicios usando el componente ServiceCard */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {highlightedServices.map((service) => (
        <ServiceCard
          title={service.title}
          description={service.description}
          features={service.features}
          imageSrc={service.imageSrc}
          price={service.price}
          colorClass={service.colorClass}
          href={service.href}
        />
      ))}
    </div>

    {/* Botón de ver todos los servicios */}
    <div class="text-center">
      <a
        href="/servicios"
        class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-1"
      >
        Conoce todos nuestros servicios
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>