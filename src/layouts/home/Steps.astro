---
import StepCard from '../../layouts/components/StepCards.astro';

// Definir los iconos como constantes para mayor claridad
const iconoConsulta = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>`;

const iconoPlanificacion = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>`;

const iconoDesarrollo = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>`;

const iconoRevision = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>`;
---

<section id="proceso-trabajo" class="py-20 bg-slate-900 relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-1/4 -right-24 w-96 h-96 bg-blue-500 rounded-full mix-blend-multiply blur-2xl"></div>
    <div class="absolute bottom-0 -left-24 w-72 h-72 bg-indigo-500 rounded-full mix-blend-multiply blur-2xl"></div>
  </div>

  <!-- Grid de fondo -->
  <div class="absolute inset-0 opacity-5">
    <div class="h-full w-full grid grid-cols-12 gap-1">
      {Array(12).fill(0).map((_, i) => (
        <div class="h-full border-r border-gray-300"></div>
      ))}
    </div>
    <div class="h-full w-full grid grid-rows-6 gap-1">
      {Array(6).fill(0).map((_, i) => (
        <div class="w-full border-b border-gray-300"></div>
      ))}
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Encabezado de la sección -->
    <div class="text-center mb-20">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Nuestro Proceso de Trabajo</h2>
      <p class="text-gray-300 max-w-3xl mx-auto">
        Metodología clara y transparente para asegurar resultados óptimos en cada etapa de tu proyecto académico.
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mt-6"></div>
    </div>

    <!-- Pasos del proceso -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <StepCard 
        numero="1" 
        titulo="Consulta Inicial" 
        descripcion="Evaluamos tus necesidades académicas y establecemos los objetivos específicos de tu proyecto. Te ofrecemos orientación gratuita para definir el alcance y metodología adecuada."
        icono={iconoConsulta}
        colorIcono="text-blue-400"
      />
      
      <StepCard 
        numero="2" 
        titulo="Planificación y Estructura" 
        descripcion="Desarrollamos un plan detallado con cronograma, recursos bibliográficos y estructura metodológica. Te presentamos un esquema completo para tu aprobación antes de iniciar."
        icono={iconoPlanificacion}
        colorIcono="text-purple-400"
      />
      
      <StepCard 
        numero="3" 
        titulo="Desarrollo e Investigación" 
        descripcion="Realizamos la investigación, redacción y análisis según los estándares académicos. Mantenemos comunicación constante con informes de avance periódicos."
        icono={iconoDesarrollo}
        colorIcono="text-pink-400"
      />
      
      <StepCard 
        numero="4" 
        titulo="Revisión y Entrega Final" 
        descripcion="Verificamos la originalidad con Turnitin y realizamos las correcciones necesarias. Te entregamos el trabajo final con orientación para su defensa si es requerido."
        icono={iconoRevision}
        colorIcono="text-teal-400"
      />
    </div>

    <!-- CTA -->
    <div class="text-center mt-16">
      <a 
        href="/contacto" 
        class="inline-flex items-center justify-center px-8 py-3 text-base font-medium rounded-md text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-1"
      >
        Inicia tu proyecto con nosotros
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>