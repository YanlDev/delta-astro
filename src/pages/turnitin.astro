---
// src/pages/turnitin.astro
import Layout from "../layouts/Layout.astro";
import TurnitinForm from "../layouts/components/TurnitinForm.astro";
---

<Layout
  title="Revisión Turnitin - Reporte de Similitud en 5 Minutos | Delta Tesis"
  description="Obtén tu reporte de similitud Turnitin en solo 5 minutos sin depositar tu documento en la base de datos. Servicio rápido y confidencial."
>
  <!-- Hero Section de Turnitin -->
  <section
    class="relative bg-gradient-to-r from-slate-900 to-slate-800 overflow-hidden pt-20"
  >
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute -top-24 -right-24 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
      <div
        class="absolute top-0 -left-24 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
      <div
        class="absolute bottom-0 right-10 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
    </div>

    <!-- Grid de fondo -->
    <div class="absolute inset-0 opacity-5">
      <div class="h-full w-full grid grid-cols-12 gap-1">
        {
          Array(12)
            .fill(0)
            .map((_, i) => <div class="h-full border-r border-gray-300" />)
        }
      </div>
      <div class="h-full w-full grid grid-rows-6 gap-1">
        {
          Array(6)
            .fill(0)
            .map((_, i) => <div class="w-full border-b border-gray-300" />)
        }
      </div>
    </div>

    <div class="container mx-auto px-4 py-16 sm:py-24 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6"
        >
          Revisión <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-500"
            >Turnitin</span
          >
          en 5 Minutos
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
          Obtén tu reporte de similitud sin depositar tu documento en la base de
          datos de Turnitin. Servicio rápido, confidencial y profesional.
        </p>

        <!-- Características destacadas -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <div
            class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6"
          >
            <div
              class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">
              Entrega Rápida
            </h3>
            <p class="text-gray-300 text-sm">
              Recibe tu reporte en máximo 5 minutos
            </p>
          </div>

          <div
            class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6"
          >
            <div
              class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-blue-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Sin Depósito</h3>
            <p class="text-gray-300 text-sm">
              Tu documento no queda en la base de datos
            </p>
          </div>

          <div
            class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-lg p-6"
          >
            <div
              class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-purple-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">
              100% Confiable
            </h3>
            <p class="text-gray-300 text-sm">Proceso seguro y confidencial</p>
          </div>
        </div>

        <!-- CTA para ir al formulario -->
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4"
        >
          <a
            href="#formulario-turnitin"
            class="bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium px-8 py-3 rounded-lg transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg"
          >
            Solicitar Reporte Ahora
          </a>
          <a
            href="#precios"
            class="bg-transparent border border-white/30 hover:border-white/80 text-white font-medium px-8 py-3 rounded-lg transition-all duration-300 hover:bg-white/10"
          >
            Ver Precios
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Precios -->
  <section id="precios" class="py-20 bg-slate-900 relative overflow-hidden">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-1/4 -right-24 w-96 h-96 bg-blue-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
      <div
        class="absolute bottom-0 -left-24 w-72 h-72 bg-indigo-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
    </div>

    <!-- Grid de fondo -->
    <div class="absolute inset-0 opacity-5">
      <div class="h-full w-full grid grid-cols-12 gap-1">
        {
          Array(12)
            .fill(0)
            .map((_, i) => <div class="h-full border-r border-gray-300" />)
        }
      </div>
      <div class="h-full w-full grid gri"></div>
    </div>
    <!-- Formulario de Turnitin -->
    <section id="formulario-turnitin" class="py-20 bg-slate-800">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-8">
          Solicita tu Reporte de Similitud
        </h2>
        <TurnitinForm />
      </div>
    </section>
  </section>
  
  </Layout>
