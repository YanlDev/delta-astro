---
import Layout from "../layouts/Layout.astro";
import TurnitinForm from "../layouts/components/TurnitinForm.astro";
import QR from "../assets/img/QR-Yanl.jpg"
import TurnitinReport from "../assets/img/services/turnitin.jpg"
import TurnitinPrice from "../layouts/home/Turnitin.astro";
import YapePopup from "../layouts/components/YapePopup.astro"
---

<Layout
  title="Revisi√≥n Turnitin - Reporte de Similitud en 5 Minutos | Delta Tesis"
  description="Obt√©n tu reporte de similitud Turnitin en solo 15 minutos sin depositar tu documento en la base de datos. Servicio r√°pido y confidencial."
>
  <!-- Hero Section de Turnitin -->
  <section
    class="gradient-bg min-h-screen flex items-center relative overflow-hidden"
  >
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute -top-24 -right-24 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
      <div
        class="absolute top-0 -left-24 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
      <div
        class="absolute bottom-0 right-10 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
    </div>

    <!-- Grid de fondo -->
    <div class="absolute inset-0 opacity-5">
      <div
        class="h-full w-full"
        style="background-image: radial-gradient(circle, #ffffff 1px, transparent 1px); background-size: 50px 50px;"
      >
      </div>
    </div>

    <div class="container mx-auto px-4 py-16 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Lado izquierdo: Contenido principal -->
        <div class="text-center lg:text-left">
          <div class="mb-6">
            <span
              class="inline-block bg-blue-500/20 text-blue-300 px-4 py-2 rounded-full text-sm font-medium mb-4"
            >
              ‚ö° Entrega en 15 minutos
            </span>
          </div>

          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6"
          >
            Reporte
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-500"
            >
              Turnitin
            </span>
            <br />Instant√°neo
          </h1>

          <p class="text-xl text-gray-300 mb-8 max-w-2xl lg:max-w-none mx-auto">
            Obt√©n tu an√°lisis de similitud <strong
              >sin depositar tu documento</strong
            > en la base de datos. Proceso 100% confidencial.
          </p>

          <!-- Caracter√≠sticas r√°pidas -->
          <div
            class="flex flex-wrap justify-center lg:justify-start gap-4 mb-8"
          >
            <div
              class="flex items-center gap-2 bg-slate-800/50 px-4 py-2 rounded-lg border border-slate-700/50"
            >
              <div class="w-2 h-2 bg-green-400 rounded-full"></div>
              <span class="text-gray-300 text-sm">Sin dep√≥sito</span>
            </div>
            <div
              class="flex items-center gap-2 bg-slate-800/50 px-4 py-2 rounded-lg border border-slate-700/50"
            >
              <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
              <span class="text-gray-300 text-sm">PDF completo</span>
            </div>
          </div>

          <!-- Botones CTA principales -->
          <div
            class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
          >
            <a
              onclick="openYapePopup()"
              class="bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold px-8 py-4 rounded-xl transition-all duration-300 transform hover:-translate-y-1 hover:shadow-xl pulse-animation text-center"
            >
              üöÄ Pagar y Subir Documento
            </a>
            <!-- <a
              href="#ejemplo-reporte"
              class="bg-transparent border-2 border-white/30 hover:border-white/80 text-white font-medium px-8 py-4 rounded-xl transition-all duration-300 hover:bg-white/10 text-center"
            >
              üëÅÔ∏è Ver Ejemplo de Reporte
            </a> -->
          </div>
        </div>

        <!-- Lado derecho: Visuales del servicio -->
        <div class="relative">
          <!-- Imagen principal del reporte -->
          <div class="relative floating-animation">
            <div
              class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-5 shadow-2xl"
            >
              <img
                src={TurnitinReport .src}
                alt="Ejemplo de Reporte Turnitin"
                class="w-full h-auto rounded-lg shadow-lg">

              <div class="text-center">
                <div class="text-green-400 font-semibold mb-2">
                  ‚úÖ Reporte Completo en PDF
                </div>
              </div>
            </div>
          </div>

          <!-- QR de pago flotante -->
          <div
            class="absolute -bottom-6 -right-1 bg-gradient-to-br from-purple-600 to-pink-600 p-4 rounded-2xl shadow-2xl transform rotate-3"
          >
            <div class="bg-white p-1 rounded-xl">
              <img src={QR .src} alt="" class="object-cover w-34 34 rounded-lg" />
            </div>
            <div class="text-white text-center mt-2 text-sm font-medium">
              923-275-353
            </div>
          </div>

          <!-- Badge de confianza -->
          <div
            class="absolute -top-4 -left-4 bg-green-500 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg"
          >
            +100 reportes entregados
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-slate-900 relative overflow-hidden">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-1/4 -right-24 w-96 h-96 bg-blue-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
      <div
        class="absolute bottom-0 -left-24 w-72 h-72 bg-indigo-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
    </div>

    <!-- Grid de fondo -->
    <div class="absolute inset-0 opacity-5">
      <div class="h-full w-full grid grid-cols-12 gap-1">
        {
          Array(12)
            .fill(0)
            .map((_, i) => <div class="h-full border-r border-gray-300" />)
        }
      </div>
      <div class="h-full w-full grid grid-rows-6 gap-1">
        {
          Array(6)
            .fill(0)
            .map((_, i) => <div class="w-full border-b border-gray-300" />)
        }
      </div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <!-- Encabezado de la secci√≥n -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          ¬øC√≥mo Funciona Nuestro Proceso?
        </h2>
        <p class="text-gray-300 max-w-3xl mx-auto">
          Un proceso simple y r√°pido en solo 4 pasos para obtener tu reporte de
          similitud Turnitin.
        </p>
        <div
          class="w-24 h-1 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto mt-6"
        >
        </div>
      </div>

      <!-- Pasos del proceso -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto"
      >
        <!-- Paso 1: Realizar Pago -->
        <div class="relative group">
          <!-- N√∫mero del paso -->
          <div
            class="absolute -top-4 -left-4 w-12 h-12 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg z-10"
          >
            1
          </div>

          <!-- Tarjeta del paso -->
          <div
            class="bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6 pt-8 h-full transition-all duration-300 hover:shadow-xl hover:-translate-y-2 hover:border-blue-500/50"
          >
            <!-- Icono SVG -->
            <div
              class="w-36 h-36 mx-auto mb-6 bg-blue-900/30 rounded-lg flex items-center justify-center border border-blue-500/20 p-3"
            >
              <img
                src="/img/turnitinSteps/qr-code.svg"
                alt="Realizar Pago"
                class="w-full h-full object-contain"
              />
            </div>

            <!-- Contenido -->
            <h3 class="text-xl font-bold text-white mb-3 text-center">
              Realiza tu Pago
            </h3>
            <p class="text-gray-300 text-center text-sm leading-relaxed">
              Elige entre reporte √∫nico (S/10) o pack de 2 reportes (S/15) y
              transfiere por tu billetera digital Yape.
            </p>

            <!-- Badges de m√©todos de pago -->
            <div class="flex justify-center gap-2 mt-4">
              <span
                class="bg-blue-500/20 text-blue-300 px-2 py-1 rounded text-xs"
                >Yape</span
              >
            </div>
          </div>
        </div>

        <!-- Paso 2: Llenar Formulario -->
        <div class="relative group">
          <!-- N√∫mero del paso -->
          <div
            class="absolute -top-4 -left-4 w-12 h-12 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg z-10"
          >
            2
          </div>

          <!-- Tarjeta del paso -->
          <div
            class="bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6 pt-8 h-full transition-all duration-300 hover:shadow-xl hover:-translate-y-2 hover:border-purple-500/50"
          >
            <!-- Icono SVG -->
            <div
              class="w-36 h-36 mx-auto mb-6 bg-purple-900/30 rounded-lg flex items-center justify-center border border-purple-500/20 p-3"
            >
              <img
                src="/img/turnitinSteps/personal-data.svg"
                alt="Llenar Formulario"
                class="w-full h-full object-contain"
              />
            </div>

            <!-- Contenido -->
            <h3 class="text-xl font-bold text-white mb-3 text-center">
              Llena el Formulario
            </h3>
            <p class="text-gray-300 text-center text-sm leading-relaxed">
              Completa tus datos, adjunta tu documento (DOC, DOCX, PDF) y sube
              el comprobante de pago.
            </p>

            <!-- Badges de formatos -->
            <div class="flex justify-center gap-2 mt-4">
              <span
                class="bg-purple-500/20 text-purple-300 px-2 py-1 rounded text-xs"
                >PDF</span
              >
              <span
                class="bg-purple-500/20 text-purple-300 px-2 py-1 rounded text-xs"
                >DOC</span
              >
              <span
                class="bg-purple-500/20 text-purple-300 px-2 py-1 rounded text-xs"
                >DOCX</span
              >
            </div>
          </div>
        </div>

        <!-- Paso 3: Validaci√≥n del Pago -->
        <div class="relative group">
          <!-- N√∫mero del paso -->
          <div
            class="absolute -top-4 -left-4 w-12 h-12 bg-gradient-to-r from-orange-600 to-yellow-600 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg z-10"
          >
            3
          </div>

          <!-- Tarjeta del paso -->
          <div
            class="bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6 pt-8 h-full transition-all duration-300 hover:shadow-xl hover:-translate-y-2 hover:border-orange-500/50"
          >
            <!-- Icono SVG -->
            <div
              class="w-36 h-36 mx-auto mb-6 bg-orange-900/30 rounded-lg flex items-center justify-center border border-orange-500/20 p-3"
            >
              <img
                src="/img/turnitinSteps/order-confirmed.svg"
                alt="Validaci√≥n del Pago"
                class="w-full h-full object-contain"
              />
            </div>

            <!-- Contenido -->
            <h3 class="text-xl font-bold text-white mb-3 text-center">
              Validamos tu Pago
            </h3>
            <p class="text-gray-300 text-center text-sm leading-relaxed">
              Nuestro equipo verifica tu comprobante de pago para procesar tu
              solicitud inmediatamente.
            </p>

            <!-- Badge de tiempo -->
            <div class="flex justify-center mt-4">
              <span
                class="bg-orange-500/20 text-orange-300 px-3 py-1 rounded-full text-xs font-medium"
              >
                ‚ö° Verificaci√≥n R√°pida
              </span>
            </div>
          </div>
        </div>

        <!-- Paso 4: Recibe tu Reporte -->
        <div class="relative group">
          <!-- N√∫mero del paso -->
          <div
            class="absolute -top-4 -left-4 w-12 h-12 bg-gradient-to-r from-green-600 to-emerald-600 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg z-10"
          >
            4
          </div>

          <!-- Tarjeta del paso -->
          <div
            class="bg-slate-800/70 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6 pt-8 h-full transition-all duration-300 hover:shadow-xl hover:-translate-y-2 hover:border-green-500/50"
          >
            <!-- Icono SVG -->
            <div
              class="w-36 h-36 mx-auto mb-6 bg-green-900/30 rounded-lg flex items-center justify-center border border-green-500/20 p-3"
            >
              <img
                src="/img/turnitinSteps/report-analysis.svg"
                alt="Recibe tu Reporte"
                class="w-full h-full object-contain"
              />
            </div>

            <!-- Contenido -->
            <h3 class="text-xl font-bold text-white mb-3 text-center">
              Recibe tu Reporte
            </h3>
            <p class="text-gray-300 text-center text-sm leading-relaxed">
              En m√°ximo 15 minutos recibes tu reporte completo en PDF por
              WhatsApp o email.
            </p>

            <!-- Badge de tiempo de entrega -->
            <div class="flex justify-center gap-2 mt-4">
              <span
                class="bg-green-500/20 text-green-300 px-2 py-1 rounded text-xs"
                >‚è∞ 15 min</span
              >
              <span
                class="bg-green-500/20 text-green-300 px-2 py-1 rounded text-xs"
                >üìÑ PDF</span
              >
            </div>
          </div>
        </div>
      </div>

      <!-- CTA final -->
    </div>
  </section>

  <!-- Secci√≥n de Precios -->
  <section id="precios" class="py-20 bg-slate-900 relative overflow-hidden">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-1/4 -right-24 w-96 h-96 bg-blue-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
      <div
        class="absolute bottom-0 -left-24 w-72 h-72 bg-indigo-500 rounded-full mix-blend-multiply blur-2xl"
      >
      </div>
    </div>

    <!-- Grid de fondo -->
    <div class="absolute inset-0 opacity-5">
      <div class="h-full w-full grid grid-cols-12 gap-1">
        {
          Array(12)
            .fill(0)
            .map((_, i) => <div class="h-full border-r border-gray-300" />)
        }
      </div>
      <div class="h-full w-full grid gri"></div>
    </div>
    <!-- Formulario de Turnitin -->
    <section id="formulario-turnitin" class="py-20 bg-slate-800">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-8">
          Solicita tu Reporte de Similitud
        </h2>
        <TurnitinForm />
      </div>
    </section>
  </section>

  <TurnitinPrice/>

  <style>
    .gradient-bg {
      background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    }
    .floating-animation {
      animation: floating 3s ease-in-out infinite;
    }
    @keyframes floating {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
    }
    .pulse-animation {
      animation: pulse 2s ease-in-out infinite;
    }
    @keyframes pulse {
      0%,
      100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
    }
  </style>
  <YapePopup />
</Layout>
